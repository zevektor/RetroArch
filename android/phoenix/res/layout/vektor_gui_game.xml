<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vektor_gui_list_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.retroarch.browser.vektorgui.ui.views.VektorGuiTextView
        android:id="@+id/vektor_gui_list_gamename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/vektor_gui_list_playbtn"
        android:ellipsize="marquee"
        android:freezesText="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_marginLeft="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Game Name"
        android:textColor="@color/android:white"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/vektor_gui_list_playbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_media_play"
        android:background="#00000000" 
        android:visibility="gone"/>

</RelativeLayout>